# EditorConfig is awesome: https://EditorConfig.org

# 根目录的配置文件，表示这个配置文件是项目的根配置文件。如果设置为 true，编辑器会从该文件开始，并停止向上搜索其他 .editorconfig 文件
root = true

# 匹配全部文件
[*]
indent_style = space # 空格缩进,可选"space"、"tab"
indent_size = 4 # 缩进空格为4个
end_of_line = lf # 结尾换行符，可选"lf换行符(unix默认\n)"、"cr回车符(\n)"、"crlf回车换行符(windows默认\r\n)"
charset = utf-8 # 文件编码是 utf-8
trim_trailing_whitespace = true # 不保留行末的空格
insert_final_newline = true # 文件末尾添加一个空行

[*.{js,html,less,css,json}] # 对所有 js html, less, css, json 文件生效
indent_style = space # 空格缩进,可选"space"、"tab"

[package.json] # 对 package.json 生效
indent_size = 2 # 使用2个空格缩进


[*.md] # 对所有 md 文件生效
trim_trailing_whitespace = false # 保留行末的空格